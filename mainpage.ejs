<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rectangle</title>
   <link rel="stylesheet" href="./stylesheets/page.css">
</head>
<body>
    <div>
        <form class = "form" action = "/addRect" method='post'>
            <div>
                <h1 class = "headerText">Rectangles</h1>
            </div>
            <div>
                <table class = "table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Colour</th>
                        </tr>
                    </thead>
                    <ul>
                        <% results.forEach(function(r) { %>
                            <tbody>
                                <tr>
                                    <td>
                                        <%= r.uid %>
                                    </td>
                                    <td>
                                        <nav>
                                            <a href = '/<%= r.uid %>'>
                                                <%= r.name %>
                                            </a>
                                        </nav>
                                    </td>
                                    <td>
                                        <h3 class = "headerThree">
                                            <%= r.colour %>
                                        </h3>
                                    </td>
                                </tr>
                            </tbody>
                        <% }); %>
                    </ul>
                </table>
            </div>
            <div>
                <div>
                    <input class = "TextField" type="text" name="name" placeholder="Enter Name">
                </div>
                <div>
                    <input class = "TextField" type="number" oninput="validity.valid||(value='');" min="0" name="width" placeholder="Enter Width">
                </div>
                <div>
                    <input class = "TextField" type="number" oninput="validity.valid||(value='');" min="0" name="height" placeholder="Enter Height">
                </div>
                <div>
                    <input class = "TextField" type="text" name="colour" placeholder="Enter Colour">
                </div>
                <button class = "addRow" type='submit'>ADD</button>
            </div>
        </form>
        <form class = "form2" action = "/deleteRect" method='post'>
            <div>
                <div>
                    <input class = "TextField" type="number" oninput="validity.valid||(value='');" min="0" name="rowId" placeholder="Enter ID Number">
                </div>
                <button class = "deleteRow" type='submit'>DELETE</button>
            </div>
        </form>
    </div>
</body>
</html>